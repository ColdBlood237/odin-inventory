extends layout 

block content
  .p-16.bg-base-200.h-screen
    h1.text-5xl.mb-4.font-bold Delete category "#{category.name}"
    if (category_items.length !== 0) 
      .alert.alert-warning.my-8
        svg.stroke-current.shrink-0.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
          path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z')
        span This category contains some items, delete them first.
      each item in category_items
        a(href=item.url)
          .card.w-96.bg-base-100.shadow-xl
            .card-body
              h2.card-title= item.name
              p #{item.description}
    else
      p.text-xl.my-8 Do you really want to delete this category ?
      form(action="", method="POST")
        input(type="hidden", name="categoryid", value=category._id)
        button.btn.btn-error(type="submit") Delete
