extends layout 

block content
  .p-16.bg-base-200.h-screen
    h1.text-5xl.mb-4.font-bold= title
    form(action="" method="POST").flex.flex-col.gap-4
      div
        label(for="name") Name:
        input#name.input.input-bordered.w-full(type="text", name="name", placeholder="Type here", value=(undefined===category ? "" : category.name))
      div
        label(for="description") Description:
        input#description.input.input-bordered.w-full(type="text", name="description" placeholder="Type here", value=(undefined===category ? "" : category.name))
      button.btn.btn-neutral.self-start(type="submit") Submit
    
    if errors
      ul.mt-8
        for error in errors 
          .alert.alert-error.mb-2
            svg.stroke-current.shrink-0.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z')
            span!= error.msg
