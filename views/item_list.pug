extends layout 

block content
  .p-16.bg-base-200.min-h-screen
    h1.text-5xl.mb-16.font-bold= title
    
    .cards-container.flex.gap-16.justify-start.flex-wrap
      each item in item_list
        a(href=item.url)
          .card.w-96.h-80.bg-base-100.shadow-xl
            figure
              img(src=`data:image/${item.img.contentType};base64,${item.img.data.toString('base64')}` alt='')
            .card-body
              h2.card-title= item.name
              p #{item.category[0].name}
              p $#{item.price}
